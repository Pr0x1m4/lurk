{
	"name": "Lurk",
	"version": "1.0.0",
	"description": "Twitter, for those who don't tweet",
	"homepage_url": "https://github.com/Pr0x1m4/lurk",
	"manifest_version": 2,
	"minimum_chrome_version": "50",
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"storage",
		"https://twitter.com/*"
	],
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"icons": {
		"128": "icon.png"
	},
	"content_scripts": [
		{
			"run_at": "document_start",
			"matches": [
				"https://twitter.com/*"
			],
			"css": [
				"content.css",
				"dark-mode.css"
			],
			"js": [
				"vendor/mousetrap.js",
				"vendor/mousetrap-global-bind.js",
				"vendor/element-ready.js",
				"vendor/scroll-to-tweet.js",
				"vendor/hide-promoted-tweets.js",
				"content.js"
			]
		}
	]
}
